@import './common.styl';
@import './loading.styl';

.dg.ac {
   z-index: 100 !important;
}

button {
   background: red;
   position: absolute;
   z-index: 1100;
   bottom: 200px;
   left: 150px;
}

.chapters {
   font-size: 24px;
   color: white;
   position: absolute;
   bottom: 100px;
   right: 100px;
   z-index: 999;
   width: 400px;
   height: 100px;
   display: flex;
   align-items: center;
   justify-content: center;
   letter-spacing: 4px;
}

h2 {
   font-family: CirkaLight;
   font-size: 24px;
   text-transform: uppercase;
   font-weight: 100;
}

.title {
   font-family: CirkaBold;
}

.screen-change {
   animation-name: screen-change;
   animation-duration: 3s;
}

#curtain {
   background: black;
   opacity: 0;
   z-index: 1000;
   position: absolute;
   width: 100vw;
   height: 100vh;
}

@keyframes screen-change {
   0% {
      opacity: 0;
   }

   30% {
      opacity: 1;
   }

   /* Waiting time */
   70% {
      opacity: 1;
   }

   100% {
      opacity: 0;
   }
}