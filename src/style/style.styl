@import './common.styl';
@import './loading.styl';

.dg.ac {
   z-index: 100 !important;
}

button {
   z-index: 1001;
   position: relative;
}

.chapters {
   font-size: 24px;
   color: white;
   position: absolute;
   bottom: 100px;
   right: 100px;
   z-index: 999;
   width: 400px;
   height: 100px;
   display: flex;
   align-items: center;
   justify-content: center;
   letter-spacing: 4px;
}

h2 {
   font-family: CirkaLight;
   font-size: 24px;
   text-transform: uppercase;
   font-weight: 100;
}

.title {
   font-family: CirkaBold;
}

.screen-change {
   animation-name: screen-change;
   animation-duration: 4.5s;
}

#curtain {
   background: black;
   opacity: 0;
   z-index: 1000;
   position: absolute;
   width: 100vw;
   height: 100vh;
}

.instructions {
   font-size: 1em;
   color: white;
   position: absolute;
   top: 50%;
   left: 50%;
   transform: translate(-50%, -50%);
   z-index: 1001;
   width: 100%;
   height: 100%;
   display: flex;
   flex-direction: column;
   align-items: center;
   justify-content: center;
   background: rgba(0, 0, 0, 0.8);
   font-family: Andika;
   transform: opacity 1.5s ease-in;

   // p {
   // margin-top: 300px;
   // }
   button {
      background: transparent;
      border: none;
      // width: 60px;
      // height: 60px;
      cursor: pointer;
      z-index: 10;
      color: #fff;
      font-family: CirkaLight;
   }

   #lueur-container {
      height: 1000px;
      width: 1000px;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);

      svg {
         display: flex;
         position: absolute;
      }
   }
}

.drag-instructions {
   font-size: 1em;
   color: white;
   position: absolute;
   top: 60%;
   left: 50%;
   transform: translate(-50%, -60%);
   z-index: 10;
   width: 100%;
   height: 100%;
   display: flex;
   flex-direction: column;
   align-items: center;
   justify-content: center;
   background: rgba(0, 0, 0, 0.8);
   font-family: Andika;
   transform: opacity 1.5s ease-in;

   p {
      margin-top: 20px;
   }

   #drag-container {
      padding-top: 180px;
   }

   button {
      background: transparent;
      border: none;
      cursor: pointer;
      z-index: 10;
      margin: 0;
      color: #fff;
      font-family: CirkaLight;
   }
}

@keyframes screen-change {
   0% {
      opacity: 0;
   }

   30% {
      opacity: 1;
   }

   /* Waiting time */
   70% {
      opacity: 1;
   }

   100% {
      opacity: 0;
   }
}