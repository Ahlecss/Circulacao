.loadScreen
  position absolute
  top 0
  width 100%
  height 100%
  background-color #fff
  display flex
  flex-direction column
  justify-content center
  align-items center
  transition 0.55s opacity ease-out
  z-index 100

.load
  margin 0 0 30px 0
  padding 0
  color #fff
  font-family Montserrat
  user-select none
  z-index: 2

.progressBar
  top 100%
  width 100%
  height 100%
  background-color #232323
  position absolute
  // animation liquid 8s infinite
  z-index: 1
  transition:top 1s ease-in-out;

@keyframes liquid 
  0% {
    top 100%
  } 
  100% {
    top 0
  } 


